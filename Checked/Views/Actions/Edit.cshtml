@model Checked.Models.ViewModels.CreateActionViewModel;

@{
    ViewData["Title"] = "Edit";   
}
<link rel="stylesheet" href="~/css/actions.css" />
<div class="cntr create-action">
    <div>
        <h4>Action</h4>
        <hr style="color:white" />
    </div>
    <div style="width:100%" class="row">
        <div style="width:100%" class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="PlanId" />
                <input type="hidden" asp-for="Finish" />
                <input type="hidden" asp-for="OccurrenceId" />
                <input type="hidden" asp-for="Goal" />
                <div class="create-box">
                    <div>
                        <div class="form-group">
                            <label asp-for="What" class="control-label"></label>
                            <input asp-for="What" class="form-control" />
                            <span asp-validation-for="What" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Why" class="control-label"></label>
                            <input asp-for="Why" class="form-control" />
                            <span asp-validation-for="Why" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Where" class="control-label"></label>
                            <input asp-for="Where" class="form-control" />
                            <span asp-validation-for="Where" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Who" class="control-label"></label>
                            <input asp-for="Who" class="form-control" />
                            <span asp-validation-for="Who" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="How" class="control-label"></label>
                            <input asp-for="How" class="form-control" />
                            <span asp-validation-for="How" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="HowMuch" class="control-label"></label>
                            <input asp-for="HowMuch" class="form-control" />
                            <span asp-validation-for="HowMuch" class="text-danger"></span>
                        </div>
                    </div>
                    <div>
                        <div class="form-group">
                            <label asp-for="Init" class="control-label"></label>
                            <input asp-for="Init" class="form-control" />
                            <span asp-validation-for="Init" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="NewFinish" class="control-label"></label>
                            <input asp-for="NewFinish" class="form-control" />
                            <span asp-validation-for="NewFinish" class="text-danger"></span>
                        </div>
                        <div class="form-group" style="display: flex;justify-content: space-between;">
                            <label asp-for="Status.Name" class="control-label"></label>
                            <select asp-for="Status.Id" asp-items="@ViewBag.Status"></select>
                            <span asp-validation-for="Status.Id" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Atualizar" class="btn btn-primary" />
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-controller="Plans" asp-route-planId=@Model.PlanId asp-action="Index">Back to List</a>
    </div>
</div>
@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
